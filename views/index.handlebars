<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <img src="assets/images/hamburger.png">
            <h1>EAT DA BURGER!</h1>
        </div>
        <div class="col-xs-6" class="task">
            <div class="row">
                {{#each burger}}
                    {{#unless this.devoured}}
                <div class="col-xs-6" id="uneaten">
                    <pre>{{this.id}}.{{this.burger_name}}</pre>
                </div>
            <div class="col-xs-3 text_center">
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">
                        DEVOUR IT!</button>
                </form>
            </div> 
            {{/unless}}  
            {{/each}}
            </div>
        </div>

        <div class="col-xs-6 text-center" class="task" id="eaten">
            {{#each burger}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
            
        </div>        
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_selection" >
            <p>Add the name of the burger you would like to eat!</p>
        <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
        <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
        </form>
        
        </div>
    </div>
</div>
